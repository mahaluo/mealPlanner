<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp">

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/ingredientAmountSeekBar"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:bsb_bubble_color="@color/mainBlue"
        app:bsb_bubble_text_color="@color/mainYellow"
        app:bsb_second_track_color="@color/mainYellow"
        app:bsb_section_text_color="@color/common_google_signin_btn_text_dark_focused"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_thumb_color="@color/mainYellow"
        app:bsb_thumb_text_color="@color/common_google_signin_btn_text_dark_focused"
        app:bsb_track_color="@color/mainBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intakeLevelTextView" />

    <TextView
        android:id="@+id/carbsSeekBarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/carbsSeekBarTextView"
        app:layout_constraintEnd_toStartOf="@+id/seekBarGuideLine"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredientAmountSeekBar" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/carbsSeekBar"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:bsb_bubble_color="@color/mainBlue"
        app:bsb_bubble_text_color="@color/mainYellow"
        app:bsb_second_track_color="@color/mainYellow"
        app:bsb_section_text_color="@color/common_google_signin_btn_text_dark_focused"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_thumb_color="@color/mainYellow"
        app:bsb_thumb_text_color="@color/common_google_signin_btn_text_dark_focused"
        app:bsb_track_color="@color/mainBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carbsSeekBarTextView" />

    <TextView
        android:id="@+id/proteinSeekBarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/proteinSeekBarTextView"
        app:layout_constraintEnd_toStartOf="@+id/seekBarGuideLine"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carbsSeekBar" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/proteinSeekBar"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:bsb_bubble_color="@color/mainBlue"
        app:bsb_bubble_text_color="@color/mainYellow"
        app:bsb_second_track_color="@color/mainYellow"
        app:bsb_section_text_color="@color/common_google_signin_btn_text_dark_focused"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_thumb_color="@color/mainYellow"
        app:bsb_thumb_text_color="@color/common_google_signin_btn_text_dark_focused"
        app:bsb_track_color="@color/mainBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proteinSeekBarTextView" />

    <TextView
        android:id="@+id/fatSeekBarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/fatSeekBarTextView"
        app:layout_constraintEnd_toStartOf="@+id/seekBarGuideLine"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proteinSeekBar" />

    <com.xw.repo.BubbleSeekBar
        android:id="@+id/fatSeekBar"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:bsb_bubble_color="@color/mainBlue"
        app:bsb_bubble_text_color="@color/mainYellow"
        app:bsb_second_track_color="@color/mainYellow"
        app:bsb_section_text_color="@color/common_google_signin_btn_text_dark_focused"
        app:bsb_show_section_mark="true"
        app:bsb_show_section_text="true"
        app:bsb_show_thumb_text="true"
        app:bsb_thumb_color="@color/mainYellow"
        app:bsb_thumb_text_color="@color/common_google_signin_btn_text_dark_focused"
        app:bsb_track_color="@color/mainBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fatSeekBarTextView" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/seekBarGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/intakeLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/intakeLevelSeekBarTextView"
        app:layout_constraintEnd_toStartOf="@+id/seekBarGuideLine"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bodyWeightTextView" />

    <TextView
        android:id="@+id/bodyWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/bodyWeightTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bodyWeightTextEdit"
        android:layout_width="77dp"
        android:layout_height="42dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:ems="10"
        android:hint="@string/bodyWeightEditTextHint"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bodyWeightTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calorieCounterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ingredientAmountSeekBar"
        app:layout_constraintStart_toEndOf="@+id/intakeLevelTextView"
        app:layout_constraintTop_toBottomOf="@+id/bodyWeightTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>