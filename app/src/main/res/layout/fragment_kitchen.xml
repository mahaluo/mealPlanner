<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/kitchenTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/kitchenTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/storedMealsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        app:backgroundTint="@color/mainBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kitchenTitleTextView"
        app:maxImageSize="56dp"
        app:srcCompat="@drawable/fridge" />

    <TextView
        android:id="@+id/storedMealsButtonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/storedMealsButton"
        app:layout_constraintEnd_toEndOf="@+id/storedMealsButton"
        app:layout_constraintStart_toStartOf="@+id/storedMealsButton"
        app:layout_constraintTop_toBottomOf="@+id/storedMealsButton" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/storedIngredientsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:clickable="true"
        app:backgroundTint="@color/mainBlue"
        app:layout_constraintEnd_toStartOf="@+id/storedMealsButton"
        app:layout_constraintTop_toTopOf="@+id/storedMealsButton"
        app:maxImageSize="56dp"
        app:srcCompat="@drawable/pantry" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/storedIngredientsButton"
        app:layout_constraintEnd_toEndOf="@+id/storedIngredientsButton"
        app:layout_constraintStart_toStartOf="@+id/storedIngredientsButton"
        app:layout_constraintTop_toBottomOf="@+id/storedIngredientsButton" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/newMealButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        app:backgroundTint="@color/mainBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kitchenTitleTextView"
        app:maxImageSize="56dp"
        app:srcCompat="@drawable/meals" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/newIngredientButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:clickable="true"
        app:backgroundTint="@color/mainBlue"
        app:layout_constraintStart_toEndOf="@+id/newMealButton"
        app:layout_constraintTop_toTopOf="@+id/newMealButton"
        app:maxImageSize="56dp"
        app:srcCompat="@drawable/ingredients" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/newIngredientButton"
        app:layout_constraintEnd_toEndOf="@+id/newIngredientButton"
        app:layout_constraintStart_toStartOf="@+id/newIngredientButton"
        app:layout_constraintTop_toBottomOf="@+id/newIngredientButton" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/newMealButton"
        app:layout_constraintEnd_toEndOf="@+id/newMealButton"
        app:layout_constraintStart_toStartOf="@+id/newMealButton"
        app:layout_constraintTop_toBottomOf="@+id/newMealButton" />
</androidx.constraintlayout.widget.ConstraintLayout>